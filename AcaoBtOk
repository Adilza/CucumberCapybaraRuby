    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       
        if( jTextField1.getText().isEmpty()|| jTextField2.getText().isEmpty()){
             JOptionPane.showMessageDialog(rootPane,"Campo nome ou sobrenome  vazio !", "Erro", JOptionPane.ERROR_MESSAGE);
        }else {
            String mgs= "Bem vindo a baga√ßa " +jTextField1.getText()+" "+jTextField2.getText()+ "!";
            JOptionPane.showMessageDialog(rootPane, mgs, "Bem vindo", JOptionPane.INFORMATION_MESSAGE);
        }
        vetor.add(jTextField1.getText());
    }                                        
